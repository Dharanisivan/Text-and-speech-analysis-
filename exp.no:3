import nltk
from nltk.corpus import gutenberg
nltk.download('gutenberg')
nltk.download('punkt')
file_ids = gutenberg.fileids()
print("First 5 file IDs in Gutenberg corpus:", file_ids[:5])
print("\nFirst 500 characters of raw text from the first book ({}):".format(file_ids[0]), gutenberg.raw(file_ids[0])[:500])

